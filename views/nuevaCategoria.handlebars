{{!-- Contenido de página principal --}}

{{!-- Llamado a partial que contiene el menú lateral --}}
{{> navDashboard }}

{{!-- Contenido de la página --}}
<div class="main-content" id="panel">
    {{!-- Llamado a partial que contiene la barra superior --}}
    {{> topnav }}

    {{!-- Contenido de cada opción dentro del dashboard --}}
    <div class="container-fluid mt-6">
        {{!-- FORMULARIO CATEGORÍAS --}}
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card-wrapper">
                    <div class="card">
                        {{!-- Card header --}}
                        <div class="card-header">
                            <h3 class="mb-0">Nueva categoria</h3>
                        </div>
                        {{!-- Card body --}}
                        <div class="card-body">
                            <form action="/categoria/nueva" method="post">
                                <div class="form-group row">
                                    <label for="nombre"
                                        class="col-md-3 col-form-label form-control-label">Nombre</label>
                                    <div class="col-md-9">
                                        <input class="form-control" type="text" name="nombre"
                                            placeholder="Nombre de categoría" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-control-label"
                                        for="exampleFormControlTextarea1">Descripción</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                                        name="descripcion" required></textarea>
                                </div>

                                {{!-- <button class="btn btn-primary" type="submit">Crear</button> --}}

                                <input type="submit" value="Crear" class="btn btn-primary">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>