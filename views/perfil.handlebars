{{!-- Contenido de página de perfil --}}

{{!-- Llamado a partial que contiene el menú lateral --}}
{{> navDashboard}}

{{!-- Contenido de la página --}}
<div class="main-content" id="panel">
    {{!-- Llamado a partial que contiene la barra superior --}}
    {{> topnav }}

    {{!-- Contenido del perfil --}}
    <div class="header pb-6 d-flex align-items-center"
        style="min-height: 500px; background-image: url(/img/theme/background.jpg); background-size: cover; background-position: center;">
        {{!-- Máscara --}}
        <span class="mask bg-gradient-default opacity-8"></span>
        {{!-- Encabezado --}}
        <div class="container-fluid d-flex align-items-center">
            <div class="row">
                <div class="col-lg-7 col-md-10">
                    <h1 class="display-2 text-white">¡Hola {{nombre}}!</h1>
                    <p class="text-white mt-0 mb-5">Esta es la página de tu perfil, puedes realizar la modificaciones
                        necesarias.</p>
                </div>
            </div>
        </div>
    </div>
    {{!-- Contenido del perfil --}}
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col-xl-4 order-xl-2">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Recuerda</h3>
                        <p class="card-text mb-4">Quién vive con más desahogo no es el que tiene más,
                            sino el que administra bien lo mucho o poco que tiene.
                        </p>
                    </div>
                </div>

                {{!-- VISA --}}
                <div class="card bg-gradient-primary">
                    <!-- Card body -->
                    <div class="card-body">
                        <div class="row justify-content-between align-items-center">
                            <div class="col">
                                <img src="/img/icons/cards/visa.png" alt="Image placeholder" />
                            </div>
                            <div class="col-auto">
                                <span class="badge badge-lg badge-success">Activa</span>
                            </div>
                        </div>
                        <div class="my-4">
                            <span class="h6 surtitle text-light">
                                Número de tarjeta
                            </span>
                            <div class="card-serial-number h1 text-white">
                                <div>4358</div>
                                <div>7421</div>
                                <div>9256</div>
                                <div>6682</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <span class="h6 surtitle text-light">Nombre</span>
                                <span class="d-block h3 text-white">{{nombre}}</span>
                            </div>
                            <div class="col">
                                <span class="h6 surtitle text-light">Expira</span>
                                <span class="d-block h3 text-white">11/23</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-8 order-xl-1">
                <div class="row">
                    {{!-- Card con degradado --}}
                    <div class="col-lg-12">
                        <div class="card bg-gradient-info border-0">
                            <!-- Card body -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h2 class="card-title text-uppercase text-muted mb-0 text-white">SUELDO
                                        </h2>
                                        <span class="h2 font-weight-bold mb-0 text-white">L.{{sueldo}}</span>
                                    </div>
                                    <div class="col-auto">
                                        <div class="icon icon-shape bg-white text-dark rounded-circle shadow">
                                            <i class="ni ni-money-coins"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- Editar Perfil --}}
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h3 class="mb-0">Editar perfil </h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/editarPerfilUsuario" method="POST">
                            <h6 class="heading-small text-muted mb-4">Información</h6>
                            <div class="pl-lg-4">
                                <div class="row">
                                    {{!-- Nombre --}}
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-username">Nombre</label>
                                            <input type="text" id="input-username" class="form-control" name="nombre"
                                                placeholder="Ingresa tu nombre" value="{{usuario.nombre}}" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    {{!-- Email --}}
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">Correo
                                                electrónico</label>
                                            <input type="email" id="input-email" class="form-control" name="email"
                                                placeholder="Ingresa tu dirección de correo electrónico"
                                                value="{{usuario.email}}" required>
                                        </div>
                                    </div>
                                    {{!-- Sueldo --}}
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">Sueldo</label>
                                            <input class="form-control" type="number" name="sueldo"
                                                placeholder="Ingresa tu sueldo" step="0.01" min="0" pattern="^[0-9]"
                                                value="{{usuario.sueldo}}" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-lg-12 text-right">
                                    <div class="form-group">
                                        <input type="submit" value="Editar" class="btn btn-primary">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    </div>